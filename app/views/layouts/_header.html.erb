<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner navbar-bg">
    <div class="container">
      <%= link_to t('app.title'), root_path, id: "logo" %>

      <nav>
        <ul class="nav pull-right _nav-text">
          <li><%= link_to t('.home'), root_path %></li>
          <li><%= link_to t('.help'), help_path %></li>

          <% if signed_in? %>
            <%= render 'layouts/header_signed_in' %>
          <% else %>
            <%= render 'layouts/header_no_signed_in' %>
          <% end %>

<% if false %>
          <li>
          <% if I18n.locale == :en %>
            <%= link_to( t('locale.ja'), locale: 'ja' ) %>
          <% else %>
            <%= link_to( t('locale.en'), locale: 'en' ) %>
          <% end %>
          </li>
<% end %>

        </ul>
      </nav>
    </div>
  </div>
</header>
