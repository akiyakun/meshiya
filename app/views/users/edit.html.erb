<% provide( :title, t('.title') ) %>
<h1><%= t('.header') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for( @user ) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit t('.submit'), class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <%= link_to t('.change'), "http://gravatar.com/emails", target: ["_blank"] %>
  </div>
</div>
