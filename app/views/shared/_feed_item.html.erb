<div class="_box micropost">
  <li id="<%= feed_item.id %>" class="_box-inner">
    <div>
      <%= link_to gravatar_for( feed_item.user ), feed_item.user %>

      <span class="shop-name" style="font-weight:bold; font-size:x-large;">
        <%= feed_item.shop_name %>
      </span>

      <span class="point">
        <%= feed_item.point %>ç‚¹
      </span>

      <br>

      <span class="user">
        <i class="icon-user"></i>
        <%= link_to feed_item.user.name, feed_item.user %>
      </span>
      [
      <span class="timestamp">
        <%= t('.posted') %> <%= time_ago_in_words( feed_item.created_at ) %> <%= t('.ago') %>
      </span>
      <span>
        <%= render 'shared/micropost_delete_link', object: feed_item %>
      </span>
      ]
    </div>

    <hr>

    <div>
      <div class="title">
        <%= feed_item.title %>
      </div>

      <!-- lightbox -->
      <div id="image<%= feed_item.id %>" class="lightbox hide fade" tabindex="-1" role="dialog" aria-hidden="true">
        <div class='lightbox-content'>
          <%= image_tag( feed_item.image.url, size: "800x600" ) %>
        </div>
      </div>

      <div class="image">
        <a data-toggle="lightbox" href="#image<%= feed_item.id %>">
          <%= image_tag( feed_item.image.url(:medium), size: "200x200" ) %>
        </a>
      </div>

      <div class="content"><%= feed_item.content %></div>

    </div>

    <div style="clear:left">
    </div>

  </li>
</div>
