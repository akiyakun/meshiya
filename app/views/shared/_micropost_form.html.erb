
<%= form_for( @micropost, :html => { multipart: true } ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t('.placeholder') %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit t('.submit'), class: "btn btn-large btn-primary" %>
<% end %>
